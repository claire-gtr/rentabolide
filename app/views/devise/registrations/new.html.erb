<div class="container">
  <h2>S'inscrire</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, label: "Mot de passe", hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true, label: "Confirmer mot de passe" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "S'inscrire", class: "btn btn-success" %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</div>
