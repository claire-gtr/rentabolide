<div class="container">
 <div class="row">
   <h2>Mes réservations :</h2>
   <%=link_to "Retour", root_path, class: "btn btn-danger btn-lg" %>
    <% @bookings.each do |booking| %>
     <div class="card">
      <div class="card-description">
       <h4>Véhicule réservé : <%= booking.car.name %> </h4>
       <h4>Propriétaire : <%= booking.car.user.email %><h4>
       <h6>Modèle :<%= booking.car.model %></h6>
       <p>Description :<%= booking.car.description %></p>
       <h5>Du <%= booking.start_time.strftime("%d/%m/%Y") %> au <%= booking.end_time.strftime("%d/%m/%Y")%></h5>
       <h6>Réservation effectuée le : <%= booking.created_at.strftime("%d/%m/%Y") %></h6>
      </div>
     </div>
   <% end %>
 </div>
</div>
