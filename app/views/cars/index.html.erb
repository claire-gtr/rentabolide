<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1503221507150-dcb5a13416ca?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=e2f066c8543d078fc0f6936ac0bd700d&auto=format&fit=crop&w=3300&q=80');">
  <div class="banner-content">
    <h1>POUR LES FANS DE BOLIDAGE <span class="spanx">X</span><span>TRÃŠME</span></h1>

     <div class="search-form">
       <style>
          input[type=text] {
              width: 400px;
              box-sizing: border-box;
              border: 2px solid #ccc;
              border-radius: 4px;
              font-size: 16px;
              background-color: white;
              background-position: 10px 10px;
              background-repeat: no-repeat;
              padding: 12px 20px 12px 40px;
              -webkit-transition: width 0.2s ease-out;
              transition: width 0.2s ease-out;
          }

          input[type=text]:focus {
              width: 85%;
          }
        </style>

      <%= form_tag cars_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "RECHERCHE TON BOLIDE PAR MARQUE" %>
      <% end %>
    </div>
  </div>
</div>

<div class="main-container">
  <div class="cards-container">
    <div class="row">
     <% @cars.each do |car| %>
       <div class="col-xs-12 col-sm-6 col-md-6">
           <div class="card">
             <div class="card-description">


               <%#= image_tag car.photo_url %>

               <h4><%= car.name %></h4>
               <h6><%= car.model %></h6>
               <h6><%= car.description %></h6>
               <br> <br>
               <div class="see-more text-center">
                <%=link_to "Voir le bolide", car_path(car), class: "btn btn-success btn-sm" %>
               </div>
             </div>
         </div>
       </div>
     <% end %>
     </div>
  </div>

  <div id="map", data-markers="<%= @markers.to_json %>"></div>
</div>
