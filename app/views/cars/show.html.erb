<br>
<div class="container">
  <div class="main-container">
    <div class="row">
     <div class="col-xs-12 col-md-6">
      <div>
        <h1><%= @car.name %></h1>
        <h2><%= @car.model %></h2>
        <p><%= @car.description %></p>
        <p><%= @car.user.email %></p>
        <%= image_tag @car.photo_url %>
      </div>
      <div>
      <br>
        <%= simple_form_for([@car, @booking]) do |f| %>
        <%= f.input :start_time, as: :date, html5: true, label: "Date de début de location souhaitée"  %>
        <%= f.input :end_time, as: :date, html5: true, label: "Date de fin de location souhaitée" %>
        <br>
        <%= f.button :submit, "Réserver", class: "btn btn-success btn-lg"  %>
        <% end %>
      </div>
      <br>
      <%=link_to "Retour", root_path, class: "btn btn-danger btn-lg" %>
    </div>
    </div>
  </div>
</div>


