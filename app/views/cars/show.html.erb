<br>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
        <h1><%= @car.name %></h1>
        <h2><%= @car.model %></h2>
        <p><%= @car.description %></p>
        <p><%= @car.user.email %></p>
      </div>
    </div>

      <%= simple_form_for([@car, @booking]) do |f| %>
      <%= f.input :start_time, as: :date, html5: true %>
      <%= f.input :end_time, as: :date, html5: true  %>
      <%= link_to "Create Booking", car_bookings_path(@car), method: :post, class: "btn btn-success"  %>
      <% end %>
  <br>
  <%=link_to "Retour", root_path, class: "btn btn-primary" %>
  </div>

