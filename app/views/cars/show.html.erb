<div class="container">
  <div class="grid">

    <div class="grid-card photo-section">

      <div class="photo-container" style="background-image: url('<%= @car.photo_url %>');"></div>
    </div>

    <div class="grid-card main-section">
      <h1><strong><%= @car.name %></strong></h1>
      <h2><%= @car.model %></h2>
      <p><%= @car.description %></p>
      <br>
      <p><strong>Bolideur</strong></p>
      <p><%= @car.user.email %></p>
    </div>

    <div class="grid-card secondary-section">
      <%= simple_form_for([@car, @booking]) do |f| %>
      <%= f.input :start_time, as: :date, html5: true, label: "Date de début de location souhaitée"  %>
      <%= f.input :end_time, as: :date, html5: true, label: "Date de fin de location souhaitée" %>
      <%= f.button :submit, "Réserver", class: "btn btn-success"  %>
      <% end %>
    </div>

    <div class="grid-card button-section">
      <%=link_to "Retour à la liste des bolides", root_path, class: "btn btn-danger btn-block" %>
    </div>

  </div>
 </div>


