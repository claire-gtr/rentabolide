<div class="main-container">
  <div class="cards-container">
    <div class="row">
     <% @cars.each do |car| %>
       <div class="col-xs-12 col-sm-6 col-md-6">
           <div class="card">
             <div class="card-description">
               <h4><%= car.name %></h4>
               <h6><%= car.model %></h6>
               <h6><%= car.description %></h6>
               <br> <br>
               <%= link_to "Supprimer mon bolide", my_car_path(car), method: :delete,
      data: { confirm: "Jacky tunning, es-tu certain de vouloir retirer ton bolide de Rent a bolide ?" }  %>
             </div>
         </div>
       </div>
     <% end %>
     </div>
  </div>

  <div id="map", data-markers="<%= @markers.to_json %>"></div>
</div>

